---
import { Image } from 'astro:assets';
import ProductCard from '../components/ProductCard.astro';
// assets
import bundle from '../assets/images/bad-dragon-bundle.jpg';
import logo from '../assets/logos/mb-link-logo.png';
import bundleLogo from '../assets/logos/bad-dragon-bundle.png';
import stars from '../assets/icons/5-stars-pink.png';
import klarna from '../assets/images/klarna.jpg';
---

<section id="offers" class="mx-auto max-w-[1440px] px-2 py-[64px] xl:px-0">
	<div class="mx-auto max-w-screen-xl">
		<article class="grid w-full gap-4 md:grid-cols-2">
			<div class="relative">
				<Image
					class="mx-auto w-full max-w-[500px] overflow-hidden rounded-2xl"
					src={bundle}
					alt="mototbunny bad dragon bundle"
				/>
				<div
					class="absolute -top-1 right-[20%] flex flex-col rounded bg-primary px-2 py-4 text-2xl font-bold text-black"
				>
					<span>SAVE</span>
					<span>$496</span>
				</div>
			</div>
			<div class="flex flex-col items-center p-2 md:items-start">
				<div class="flex flex-col items-center md:items-start">
					<Image src={logo} alt="motorbunny link" />
					<Image src={bundleLogo} alt="motorbunny link" />
				</div>
				<div class="mt-4 flex items-center gap-x-4">
					<Image src={stars} alt="" />
					<span>424 reviews</span>
				</div>
				<p class="mt-4 text-center md:text-left">
					Live a real life fantasy with the Motorbunny LINK Bad Dragon Bundle! The premium silicone
					attachments plus Motorbunny - The Worldâ€™s Most Power Vibrator - will take you to a whole
					new world. You can select the Bad Dragon Colors during checkout.
				</p>
				<div class="mt-4 flex gap-x-4 text-4xl">
					<span class="font-bold text-primary">$1,419</span>
					<span class="line-through">$1,915</span>
				</div>
				<div
					class="mt-4 flex w-full flex-col-reverse flex-wrap items-center gap-4 sm:flex-row md:items-start"
				>
					<a
						href="https://motorbunny.com/products/bad-dragon-bundle"
						class="btn btn-primary btn-lg inline-flex w-full">BUY NOW</a
					>
					<Image src={klarna} alt="klarna payments" />
				</div>
				<div
					tabindex="0"
					class="collapse collapse-plus mt-4 max-w-[400px] border border-primary bg-none text-primary"
				>
					<div class="font-regular collapse-title text-xl">What's inside the box?</div>
					<div class="collapse-content">
						<ul class="list-disc px-4">
							<li>Motorbunny Link</li>
							<li>Flint Attachment</li>
							<li>Mystic Attachment</li>
							<li>Ika Attachment</li>
							<li>Orochi Attachment</li>
						</ul>
					</div>
				</div>
			</div>
		</article>
	</div>
</section>
