---
import BDCard from '../components/BDCard.astro';
import flint from '../assets/images/bad-dragon-flint-product-01.jpg';
import mystic from '../assets/images/bad-dragon-mystic-product-01.jpg';
import ika from '../assets/images/bad-dragon-ika-product-01.jpg';
import orochi from '../assets/images/bad-dragon-orochi-product-01.jpg';
import SectionTitle from '../components/SectionTitle.astro';
---

<section id="collection" class="mx-auto mt-8 max-w-[1440px] px-4 py-[64px] xl:px-0">
	<SectionTitle title="Four Bad Dragon Attachments Exclusively for Motorbunny" />
	<div class="mt-12 grid w-full gap-8 sm:grid-cols-2 xl:grid-cols-4">
		<BDCard name="Flint" src={flint} alt="bad dragon flint attachment for motorbunny" url="#">
			<div class="flex">
				<div class="size-8 rounded-full bg-orange-300"></div>
				<div class="-ml-2 size-8 rounded-full bg-teal-600"></div>
				<div class="-ml-2 size-8 rounded-full bg-pink-300"></div>
			</div>
		</BDCard>
		<BDCard name="Mystic" src={mystic} alt="bad dragon Mystic attachment for motorbunny" url="#">
			<div class="flex">
				<div class="size-8 rounded-full bg-white"></div>
				<div class="-ml-2 size-8 rounded-full bg-purple-400"></div>
				<div class="-ml-2 size-8 rounded-full bg-pink-300"></div>
			</div>
		</BDCard>
		<BDCard name="Ika" src={ika} alt="bad dragon Ika attachment for motorbunny" url="#">
			<div class="flex">
				<div class="size-8 rounded-full bg-teal-300"></div>
				<div class="-ml-2 size-8 rounded-full bg-emerald-600"></div>
				<div class="-ml-2 size-8 rounded-full bg-pink-300"></div>
			</div>
		</BDCard>
		<BDCard name="Orochi" src={orochi} alt="bad dragon Orochi attachment for motorbunny" url="#">
			<div class="flex">
				<div class="size-8 rounded-full bg-orange-400"></div>
				<div class="-ml-2 size-8 rounded-full bg-yellow-300"></div>
				<div class="-ml-2 size-8 rounded-full bg-pink-300"></div>
			</div>
		</BDCard>
	</div>
</section>
