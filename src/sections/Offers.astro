---
import ProductCard from '../components/ProductCard.astro';
import Section from '../components/Section.astro';
// assets
import original from '../assets/images/mb-original.jpg';
import link from '../assets/images/mb-link.jpg';
import buck from '../assets/images/mb-buck.jpg';
import originalLogo from '../assets/logos/mb-original-logo.png';
import linkLogo from '../assets/logos/mb-link-logo.png';
import buckLogo from '../assets/logos/mb-buck-logo.png';
---

<Section>
	<div class="space-y-16">
		<ProductCard
			imgSrc={original}
			price={899}
			compareAt={1395}
			logoSrc={originalLogo}
			subtitle="with Regular Controller"
			reviews={423}
			description="Motorbunny Original is the classic ride on top vibrator that's sure to rock your world. With tons of attachment options (for him and her) that both vibrate and rotate, app integration, games, and more, there's something here for everyone!"
			url="#"
			items={['item-1']}
		/>
		<ProductCard
			imgSrc={link}
			price={899}
			compareAt={1395}
			logoSrc={linkLogo}
			subtitle="with Bluetooth Controller"
			reviews={423}
			description="Motorbunny Original is the classic ride on top vibrator that's sure to rock your world. With tons of attachment options (for him and her) that both vibrate and rotate, app integration, games, and more, there's something here for everyone!"
			url="#"
			items={['item-1']}
		/>
		<ProductCard
			imgSrc={buck}
			price={899}
			compareAt={1395}
			logoSrc={buckLogo}
			subtitle="with Bluetooth Controller"
			reviews={423}
			description="Motorbunny Original is the classic ride on top vibrator that's sure to rock your world. With tons of attachment options (for him and her) that both vibrate and rotate, app integration, games, and more, there's something here for everyone!"
			url="#"
			items={['item-1']}
		/>
	</div>
</Section>
