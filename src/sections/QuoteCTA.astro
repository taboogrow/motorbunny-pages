---
import { Image } from 'astro:assets';
import SectionTitle from '../components/SectionTitle.astro';
import bgdesktop from '../../public/mb-model.jpg';
import bgmobile from '../assets/images/mb-model-mobile.jpg';
---

<section class="mx-auto max-w-[1440px]">
	<div class="relative">
		<Image class="hidden md:block" src={bgdesktop} alt="" />
		<Image class="md:hidden" src={bgmobile} alt="" />
		<div
			class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 transform md:top-[200px]"
		>
			<SectionTitle
				color="dark"
				title=" I've never climaxed so hard or so many times in my life."
			/>
			<div id="mb-spin" class="mt-12 flex w-full items-center justify-center">
				<button class="btn btn-primary btn-lg">WIN A MOTORBUNNY</button>
			</div>
		</div>
	</div>
</section>
