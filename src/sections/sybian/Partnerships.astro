---
import { Image } from 'astro:assets';
// components
import Section from '../../components/Section.astro';
import SectionTitle from '../../components/SectionTitle.astro';
import PartnershipCard from '../../components/PartnershipCard.astro';
// assets
import badDragonLogo from '../../assets/logos/bad-dragon-logo.png';
import badDragonImg from '../../assets/images/bad-dragon-01.jpg';
import docJohnsonLogo from '../../assets/logos/docjohnson-logo.png';
import docJohnsonImg from '../../assets/images/docjohnson-01.png';
---

<Section bg="neutral">
	<SectionTitle title="Exclusive Partnerships" />
	<div class="mt-12 grid w-full place-items-center gap-x-4 gap-y-16 sm:grid-cols-2">
		<PartnershipCard comparison={true} logoSrc={badDragonLogo} imgSrc={badDragonImg} />
		<PartnershipCard comparison={true} logoSrc={docJohnsonLogo} imgSrc={docJohnsonImg} />
	</div>
</Section>
