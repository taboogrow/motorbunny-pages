---
import ProductCard from '../../components/ProductCard.astro';
import Section from '../../components/Section.astro';
// assets
import original from '../../assets/images/mb-original.jpg';
import link from '../../assets/images/mb-link.jpg';
import buck from '../../assets/images/mb-buck.jpg';
import originalLogo from '../../assets/logos/mb-original-logo.png';
