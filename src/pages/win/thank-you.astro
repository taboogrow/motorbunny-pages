---
import { getImage, Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';
import backgroundImage from '../../assets/images/thank-you-bg.jpg';
import backgroundImageSmall from '../../assets/images/product-swiper-1.png';
import fetLife from '../../assets/logos/fetlife.png';
import reddit from '../../assets/logos/reddit.png';
import { MoveRight } from 'lucide-astro';

const optimizedBackground = await getImage({ src: backgroundImage, format: 'webp' });
const optimizedBackgroundSmall = await getImage({ src: backgroundImageSmall, format: 'webp' });
---

<Layout description="thank you" title="Thank you" klaivyo={false} lightbox={false}>
	<main
		class="flex min-h-screen flex-col items-center justify-center gap-12 bg-cover bg-center bg-no-repeat p-6 text-center md:py-16"
	>
		<div>
			<p class="mb-3 text-xl font-bold">Take the Next Steps</p>
			<h1 class="font-monsterrat text-[40px] font-bold leading-10 text-white">
				Increase your chances of winning
			</h1>
		</div>
		<div class="flex flex-col items-center gap-12 md:flex-row">
			<div class="flex flex-col items-center">
				<div class="mb-9 flex size-[173px] items-center justify-center rounded-full bg-white">
					<Image src={fetLife} alt="fetlife logo" />
				</div>
				<a
					href="https://fetlife.com/users/5002038"
					target="_blank"
					class="btn btn-primary text-base font-semibold capitalize text-secondary"
					>Follow Us on FetLife <MoveRight class="ml-1" /></a
				>
			</div>
			<div class="flex flex-col items-center">
				<div class="mb-9 size-[173px] items-center rounded-full">
					<Image src={reddit} alt="reddit logo" class="object-none" />
				</div>
				<a
					href="https://www.reddit.com/r/MotorBunny/"
					target="_blank"
					class="btn btn-primary text-base font-semibold capitalize text-secondary"
					>Join Our Subreddit <MoveRight class="ml-1" /></a
				>
			</div>
		</div>
		<div class="max-w-[823px] rounded-lg bg-gray-800/20 px-6 py-[14px] backdrop-blur-xl">
			Add entries into the giveaway and increase your chances of winning by taking the next steps.
			We announce a winner at the end of every month.
		</div>
	</main>
</Layout>

<style
	define:vars={{
		optimizedBackground: `url(${optimizedBackground.src})`,
		optimizedBackgroundSmall: `url(${optimizedBackgroundSmall.src})`
	}}
>
	main {
		background-image: var(--optimizedBackground);
		box-shadow: inset 0 0 0 1000px rgba(0, 0, 0, 0.6);
	}
	@media (max-width: 1024px) {
		main {
			background-image: var(--optimizedBackgroundSmall);
			box-shadow: inset 0 0 0 1000px rgba(0, 0, 0, 0.6);
		}
	}
	h1 {
		text-shadow: 3px 3px 0px #ff7992;
	}
</style>
