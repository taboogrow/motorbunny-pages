---
import { Image } from 'astro:assets';
import Header from '../components/Header.astro';
import Layout from '../layouts/Layout.astro';
import CompanyLogos from '../components/CompanyLogos.astro';
// assets
import logo from '../assets/logos/bad-dragon-x-motorbunny.png';
import heroImg from '../../public/bad-dragon-orochi.jpg';
import BDGallery from '../components/BDGallery.astro';
import BDCollection from '../sections/BDCollection.astro';
import BDGlowGallery from '../sections/BDGlowGallery.astro';
import BDBundle from '../sections/BDBundle.astro';
import Reviews from '../sections/Reviews.astro';
import HowItWorks from '../sections/HowItWorks.astro';
import BDValueProps from '../sections/BDValueProps.astro';
import FAQ from '../sections/FAQ.astro';
import Footer from '../components/Footer.astro';
import BDSubscribe from '../sections/BDSubscribe.astro';
---

<Layout
	title="Bad Dragon rideable dildos for Motorbunny saddle vibrator"
	description="Bad Dragon® partnered with the world’s most powerful vibrator - Motorbunny - to create premium 100% silicone toys for your riding pleasure. Shop Bad Dragon’s Flint® the Uncut Studded Dragon, Ika® the Tentacle, Mystic the Unicorn, and Orochi® the Dragon Kaiju."
>
	<Header />
	<section
		class="mx-auto max-w-[1440px] bg-none bg-cover bg-no-repeat md:bg-[url('/bad-dragon-orochi.jpg')] md:bg-[center_left_100px] md:py-[250px] lg:bg-[center_left_200px]"
	>
		<Image
			class="h-[600px] w-full object-cover object-center md:hidden"
			src={heroImg}
			alt="bad dragon motorbunny"
		/>
		<div class="mx-auto max-w-screen-xl px-2 py-8 md:py-0 xl:px-0">
			<div class="flex w-full flex-col items-center justify-center space-y-12 md:items-start">
				<div class="flex w-full flex-col items-center justify-center md:items-start">
					<Image src={logo} alt="bad dragon x motorbunny partnership logo" />
					<h1 class="text-balance text-center text-4xl font-bold sm:text-6xl md:text-left">
						A Partnership Made for Your Wildest Fantasies
					</h1>
				</div>
				<a href="#collection" class="btn btn-primary btn-lg btn-wide uppercase"
					>see the collection</a
				>
			</div>
		</div>
	</section>
	<CompanyLogos />
	<BDGallery />
	<BDCollection />
	<BDGlowGallery />
	<BDBundle />
	<Reviews />
	<BDValueProps />
	<HowItWorks />
	<FAQ />
	<BDSubscribe />
	<Footer />
</Layout>

<style>
	h1 {
		text-shadow: 3px 3px 0px #ff7992;
	}
</style>
