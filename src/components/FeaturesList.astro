---
import { Image } from 'astro:assets';
import logo from '../assets/logos/motorbunny-logo-black.png';

type Props = {
	features: string[];
	compFeatures?: string[];
	logoSrc?: ImageMetadata;
};

const { features, compFeatures, logoSrc } = Astro.props;
---

<div class="mx-auto flex h-full w-full max-w-[500px] items-center space-y-8 px-2 py-12">
	<div class="flex flex-col space-y-8">
		<div class="space-y-2">
			{logoSrc && <Image src={logoSrc} alt="motorbunny logo" class="max-w-[250px]" />}
			<ul class="space-y-2 text-xl font-semibold text-gray-300 sm:text-2xl">
				{features.map((feature) => <li>✅ {feature}</li>)}
			</ul>
		</div>
		{
			compFeatures && (
				<div class="space-y-2">
					<span class="text-4xl font-bold text-white">Sybian</span>
					<ul class="space-y-2 text-2xl font-semibold text-gray-300">
						{compFeatures.map((feature) => (
							<li>❌ {feature}</li>
						))}
					</ul>
				</div>
			)
		}
	</div>
</div>

<style>
	li {
		text-shadow: 2px 2px 0px #000000;
	}
</style>
