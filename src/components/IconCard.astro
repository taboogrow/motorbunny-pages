---
import { Image } from 'astro:assets';
const { icon, text } = Astro.props;
---

<div class="flex flex-col items-center justify-center rounded-xl p-4">
	<div class="max-w-[80px]">
		<Image src={icon} alt="" />
	</div>
	<span class="mt-4 max-w-[8ch] text-balance text-center text-2xl">{text}</span>
</div>
