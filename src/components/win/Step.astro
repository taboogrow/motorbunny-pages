---
type Props = {
	number: number;
	title: string;
	text: string;
};

const { number, title, text }: Props = Astro.props;
---

<div
	class="relative mt-16 w-full max-w-[417px] rounded-2xl bg-primary px-4 py-14 shadow-xl md:mt-24"
>
	<span
		class="absolute -top-7 right-1/2 flex size-14 translate-x-[50%] items-center justify-center rounded-full bg-secondary text-2xl font-medium text-white"
		>{number}</span
	>
	<div class="mx-auto flex max-w-[300px] flex-col gap-4">
		<h3 class="text-xl font-bold">{title}</h3>
		<p class="text-lg">{text}</p>
		<slot />
	</div>
</div>
